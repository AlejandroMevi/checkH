<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/mBlack</item>
        <item name="android:statusBarColor">@color/mBlack</item>
        <item name="fontFamily">@font/robotoflex</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="TextStyle1">
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColorHint">@color/textColor1</item>
    </style>

    <style name="TextStyle2">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/textColor3</item>
    </style>

    <style name="TextStyle3">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/miWhite</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="TextStyle3Bold">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle4">
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextStyle5">
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="TextStyle6">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/textColor4</item>
    </style>

    <style name="TextStyle7">
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/viewColor6</item>
    </style>

    <style name="TextStyle8">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textColor">@color/textColor4</item>
    </style>

    <style name="TextStyle9">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="TextStyle10">
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/textColor5</item>
    </style>

    <style name="TextStyle11">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputLayoutEtime" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/textColor2</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="InputLayoutEtimeDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/textColor2</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="InputLayoutEtimeSpinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/textColor2</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="EditTextEtime">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="ButtonEtime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/miWhite</item>
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">-2sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">16sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">10sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="ButtonEtime2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:backgroundTint">@color/miWhite</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">-2sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">16sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">10sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="ButtonEtime3" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:backgroundTint">@color/miWhite</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">-2sp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">16sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">10sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="ToolbarEtime" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@color/miWhite</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ImageButtonEtime" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/miWhite</item>
    </style>

    <style name="CardViewEtime">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeColor">@color/viewColor4</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>
